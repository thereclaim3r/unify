<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"> New Post </div>
    <form action="/blogs" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="blog[body]" placeholder="Text goes here" required></textarea>
        </div>
        <input class="ui orange basic button big" type="submit">
    </form>
</div>

